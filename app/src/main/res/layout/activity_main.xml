<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.calculator.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#e5d194"
        android:gravity="bottom"
        android:textColor="#030104"
        android:textSize="50sp" />

    <Button
        android:id="@+id/seven"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="#f1fff6"
        android:onClick="seven"
        android:text="7"
        android:textSize="50sp"
        android:layout_alignBottom="@+id/eight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/eight"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="#f1fff6"
        android:onClick="eight"
        android:text="8"
        android:textSize="50sp"
        android:layout_alignBottom="@+id/nine"
        android:layout_toRightOf="@+id/seven"
        android:layout_toEndOf="@+id/seven"
        android:layout_alignTop="@+id/nine" />

    <Button
        android:id="@+id/nine"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="#f1fff6"
        android:onClick="nine"
        android:text="9"
        android:textSize="50sp"
        android:layout_alignBottom="@+id/addtion"
        android:layout_toRightOf="@+id/eight"
        android:layout_toEndOf="@+id/eight"
        android:layout_alignTop="@+id/addtion" />

    <Button
        android:id="@+id/addtion"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:layout_above="@+id/subtraction"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="#f1fff6"
        android:onClick="addition"
        android:text="+"
        android:textSize="50sp" />

    <Button
        android:id="@+id/four"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="#f1fff6"
        android:onClick="four"
        android:text="4"
        android:textSize="50sp"
        android:layout_above="@+id/one"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/two"
        android:layout_toStartOf="@+id/two" />

    <Button
        android:id="@+id/five"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="#f1fff6"
        android:onClick="five"
        android:text="5"
        android:textSize="50sp"
        android:layout_alignBottom="@+id/four"
        android:layout_toRightOf="@+id/four"
        android:layout_toLeftOf="@+id/six"
        android:layout_toStartOf="@+id/six" />

    <Button
        android:id="@+id/six"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="#f1fff6"
        android:onClick="six"
        android:text="6"
        android:textSize="50sp"
        android:layout_above="@+id/three"
        android:layout_toRightOf="@+id/two"
        android:layout_toEndOf="@+id/two" />

    <Button
        android:id="@+id/subtraction"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/six"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/six"
        android:background="#f1fff6"
        android:onClick="subs"
        android:text="-"
        android:textSize="50sp" />

    <Button
        android:id="@+id/one"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="#f1fff6"
        android:onClick="one"
        android:text="1"
        android:textSize="50sp"
        android:layout_above="@+id/dot"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/two"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="#f1fff6"
        android:onClick="two"
        android:text="2"
        android:textSize="50sp"
        android:layout_alignBottom="@+id/three"
        android:layout_toRightOf="@+id/one"
        android:layout_toEndOf="@+id/one"
        android:layout_alignTop="@+id/one" />

    <Button
        android:id="@+id/three"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="#f1fff6"
        android:onClick="three"
        android:text="3"
        android:textSize="50sp"
        android:layout_alignBottom="@+id/mutiplication"
        android:layout_toRightOf="@+id/two"
        android:layout_toEndOf="@+id/two"
        android:layout_alignTop="@+id/mutiplication" />

    <Button
        android:id="@+id/mutiplication"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:layout_above="@+id/division"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="#f1fff6"
        android:onClick="multi"
        android:text="X"
        android:textSize="50sp" />

    <Button
        android:id="@+id/dot"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="#f1fff6"
        android:text="."
        android:textSize="50sp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/two"
        android:layout_toStartOf="@+id/two" />

    <Button
        android:id="@+id/zero"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/three"
        android:layout_toStartOf="@+id/three"
        android:background="#f1fff6"
        android:onClick="zero"
        android:text="0"
        android:textSize="50sp"
        android:layout_alignTop="@+id/dot" />

    <Button
        android:id="@+id/eqal"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/mutiplication"
        android:layout_toStartOf="@+id/mutiplication"
        android:background="#f1fff6"
        android:onClick="eqal"
        android:text="="
        android:textSize="50sp"
        android:layout_alignTop="@+id/zero" />

    <Button
        android:id="@+id/division"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="#f1fff6"
        android:onClick="divi"
        android:text="/"
        android:textSize="50sp" />

    <Button
        android:id="@+id/clear"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seven"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#f1fff6"
        android:onClick="clear"
        android:text="Clear"
        android:textAllCaps="false"
        android:textColor="#030104"
        android:textSize="25sp" />

    <Button
        android:id="@+id/backspace"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nine"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="#f1fff6"
        android:onClick="backspace"
        android:text="Backspace"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:layout_alignTop="@+id/clear" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/clear"
        android:layout_alignParentLeft="true"
        android:background="#e5d194"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:textColor="#030104"
        android:textSize="50sp"
        android:layout_toLeftOf="@+id/addtion"
        android:layout_toStartOf="@+id/addtion" />

    <TextView
        android:id="@+id/operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textView4"
        android:gravity="center"
        android:background="#e5d194"
        android:textColor="#030104"
        android:textSize="50sp"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/textView4"
        android:layout_above="@+id/backspace" />


</RelativeLayout>
